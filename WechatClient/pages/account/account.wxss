/* pages/account/account.wxss */
page {
	background-color: #f5f5f5;
}
.account_head {
	padding: 24rpx 34rpx;
	background-color: #fff;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
}
.account_head_row {
	line-height: 1.5;
	font-size: 32rpx;
	color: #333;
	display: flex;
	flex-direction: column;
	text-align: center;
}
.account_head_row .number {
	font-size: 32rpx;
	color: #000;
	line-height: 48rpx;
}
.account_head_row .text {
	font-size: 28rpx;
	color: #b7b7b7;
	font-weight: lighter;
	line-height: 42rpx;
}
.account {
	border-bottom: 1px solid #ebebeb;
	margin-top: 22rpx;
	background-color: #fff;
	font-size: 28rpx;
	color: #8b8b8b;
	padding: 20rpx 34rpx;
}
.account_list {
	background-color: #fff;
	border-top: 1px solid #e8e8e8;
}
.account_item {
	padding: 30rpx 34rpx;
	border-bottom: 1px solid #ebebeb;
	overflow: hidden;
}
.account_list .account_item:last-child {
	border-bottom: none;
}
.account_icon {
	width: 56rpx;
	height: 56rpx;
	float: left;
}
.account_name {
	font-size: 32rpx;
	color: #000;
	float: left;
	display: block;
	margin-left: 32rpx;
	height: 56rpx;
	line-height: 56rpx;
}
.account_number {
	float: right;
	display: block;
	text-align: right;
	font-size: 32rpx;
	color: #000;
	height: 56rpx;
	line-height: 56rpx;
}